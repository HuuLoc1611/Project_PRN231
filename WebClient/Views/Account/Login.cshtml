@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Form</title>
    <style>
        /* Đặt nền gradient cho toàn bộ trang */
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background: linear-gradient(135deg, #4b6cb7, #182848);
            color: #333;
        }

        /* Thiết kế form đăng nhập */
        .login-form {
            width: 100%;
            max-width: 400px;
            padding: 40px 30px;
            background: rgba(255, 255, 255, 0.15);
            border-radius: 8px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
            text-align: center;
            color: #fff;
            backdrop-filter: blur(5px);
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

            /* Tiêu đề form */
            .login-form h2 {
                font-weight: 300;
                color: #f3f3f3;
                margin-bottom: 1.5em;
            }

        /* Khung chứa input và label */
        .form-group {
            position: relative;
            margin-bottom: 20px;
        }

            /* Trường nhập liệu */
            .form-group input {
                width: 85%;
                padding: 12px 15px;
                border: 1px solid rgba(255, 255, 255, 0.2);
                border-radius: 5px;
                background: rgba(255, 255, 255, 0.2);
                color: #fff;
                font-size: 1em;
                outline: none;
                transition: background 0.3s ease, border-color 0.3s ease;
            }

            /* Thiết kế nhãn (label) */
            .form-group label {
                position: absolute;
                top: 50%;
                left: 15px;
                color: #ccc;
                font-size: 0.9em;
                transform: translateY(-50%);
                transition: all 0.3s ease;
                pointer-events: none;
            }

            /* Hiệu ứng label khi input được chọn hoặc đã có dữ liệu */
            .form-group input:focus + label,
            .form-group input:not(:placeholder-shown) + label {
                top: -10px;
                left: 10px;
                font-size: 0.8em;
                color: #aaa;
                background: rgba(0, 0, 0, 0.4);
                padding: 0 5px;
                border-radius: 3px;
            }

        /* Thiết kế nút đăng nhập */
        .login-btn {
            width: 35%;
            padding: 12px;
            background-color: #4b6cb7;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 1em;
            font-weight: bold;
            cursor: pointer;
            transition: background 0.3s ease, transform 0.2s ease;
        }

            .login-btn:hover {
                background-color: #394b7d;
                transform: scale(1.03);
            }

            .login-btn:active {
                transform: scale(0.98);
            }
    </style>
</head>
<body>

    <div class="login-form">
        <h2>Login</h2>
        <h3>@ViewBag.error</h3>
        <form asp-action="Login" asp-controller="Account" method="POST">
            <div class="form-group">
                <input type="text" id="username" name="username" required placeholder=" " value="@ViewBag.username" />
                <label for="username">Username</label>
            </div>
            <div class="form-group">
                <input type="password" id="password" name="password" required placeholder=" " value="@ViewBag.password" />
                <label for="password">Password</label>
            </div>
            <button type="submit" class="login-btn">Log In</button>
        </form>
    </div>

</body>
</html>
